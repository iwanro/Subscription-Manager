{
  "manifest_version": 3,
  "name": "Subscription Manager",
  "version": "1.0",
  "description": "Manage your subscriptions with notifications and analytics",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Subscription Manager"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.brevo.com/*",
    "https://cdn.jsdelivr.net/*",
    "https://cdnjs.cloudflare.com/*",
    "https://unpkg.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; base-uri 'self'; connect-src 'self' https://api.brevo.com;"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["utilities.js", "premium-features.js", "chart.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
